<!DOCTYPE html>
<html lang="en">

<% include ../partials/head %>

<body>
<div class="container">

    <% include ../partials/header %>

    <div class="row">

        <h1 class="text-center">Edit campground</h1>

        <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                <button class="btn btn-lg btn-secondary btn-block">Cancel</button>
            </div>
        </form>
        <a href="/campgrounds">Go back</a>

        </div>
    <% include ../partials/footer %>

    </div>
</div>
</body>
</html>


