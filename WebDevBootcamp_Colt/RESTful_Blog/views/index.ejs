<!DOCTYPE html>
<html lang="en">

<% include partials/head %>

<body>
<div class="container">
    <% include partials/header %>

    <h1>Blogs</h1>

    <div class="row text-center" style="display: flex; flex-wrap: wrap; ">
        <% blogs.forEach((blog) => { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= blog.image %>">
                <div class="caption">
                    <h4><%= blog.title %> </h4>
                </div>
                <p>
                    <a href="/blogs/<%= blog.id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <% }) %>
    </div>

    <% include partials/footer %>
</div>
</body>
</html>