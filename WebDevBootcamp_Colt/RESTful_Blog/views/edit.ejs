<!DOCTYPE html>
<html lang="en">

<% include partials/head %>

<body>
<div class="container">

    <% include partials/header %>

    <div class="row">

        <h1 class="text-center">Edit</h1>

        <div style="width: 30%; margin: 30px auto;">
        <form action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="title" value="<%= blog.title %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" value="<%= blog.image %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="10" name="body"><%= blog.body %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                <a href="/blogs/<%= blog.id %>" class="btn btn-lg btn-default btn-block">Cancel</a>
            </div>
        </form>
        <a href="/blogs">Go back</a>

        </div>
        <% include partials/footer %>

    </div>
</div>
</body>
</html>


